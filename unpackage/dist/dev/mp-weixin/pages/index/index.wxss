
page{
  background-color: #f4f4f4;
}
.Top-view{
  height: 330rpx;
  position: relative;
  background-image: linear-gradient(to top,#9be15d 0%,#00e3ae 100%);
}
.profit-view{
  background-color: #ffffff;
  position: absolute;
  left: 20rpx;
  right: 20rpx;  border-radius: 10rpx;
  padding: 20rpx;
}
.profit-sum{
  display: flex;
  flex-direction: column;
  padding-bottom: 10rpx;
}
.profit-sale{
display: flex;
flex-direction: row;
justify-content: space-between;
}
.profit-sale view{
  display: flex;
  align-items: center;
  flex-direction: column;
}
.profit-sum text:nth-child(2){
	font-size: 40rpx;
	padding-top: 10rpx;
}
.profit-sale view text:nth-child(1){
	color: #a7a7a7;
	padding-bottom: 10rpx;
}
.profit-sale view text:nth-child(2){
	font-weight: bold;
}
.gongGe{
  background-color: #ffffff;
  margin: 0 20rpx 20rpx 20rpx;
  border-radius: 10rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  position: absolute;
  left: 0;
  right: 0;
  color: #555555;
}
.gongGe image{
  width: 55rpx;
  height: 55rpx;
  display: block;
  margin-bottom: 20rpx;
}
.gongGe view{
  width: calc(25%-10rpx*2);
  margin: 20rpx 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

